{
"type": "OBJECT",
"properties": {
"overall_status": {
    "type": "STRING",
    "description": "General well-being status (e.g., 'Stable with areas for improvement')."
},
"key_metrics": {
    "type": "OBJECT",
    "properties": {
        "diet_score": {
            "type": "NUMBER",
            "description": "Score/rating for diet quality (0-10).",
            "minimum": 0,
            "maximum": 10
        },
        "progression_trend": {
            "type": "STRING",
            "enum": [
                "Positive",
                "Negative",
                "Neutral"
            ],
            "description": "Trend from the last progression analysis."
        }
    },
    "required": [
        "diet_score",
        "progression_trend"
    ]
},
"sections": {
    "type": "ARRAY",
    "items": {
        "type": "OBJECT",
        "properties": {
            "section_title": {
                "type": "STRING"
            },
            "brief_summary": {
                "type": "STRING",
                "description": "A 1-2 sentence summary of this health section (e.g., 'Diet is balanced but low in fiber')."
            },
            "recommendation": {
                "type": "STRING",
                "description": "The most important takeaway/action for this section."
            }
        },
        "required": [
            "section_title",
            "brief_summary",
            "recommendation"
        ]
    }
}
},
"required": [
"overall_status",
"key_metrics",
"sections"
]
}