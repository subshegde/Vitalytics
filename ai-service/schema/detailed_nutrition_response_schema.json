{
    "type": "OBJECT",
    "properties": {
        "item_name": {
            "type": "STRING",
            "description": "The name of the fruit, vegetable, or nutrient searched."
        },
        "category": {
            "type": "STRING",
            "enum": [
                "Fruit",
                "Vegetable",
                "Nutrient"
            ]
        },
        "description": {
            "type": "STRING",
            "description": "A comprehensive summary of the item."
        },
        "key_nutrients": {
            "type": "ARRAY",
            "items": {
                "type": "OBJECT",
                "properties": {
                    "nutrient": {
                        "type": "STRING"
                    },
                    "amount": {
                        "type": "STRING",
                        "description": "The measured amount per serving/100g."
                    },
                    "daily_value_percent": {
                        "type": "NUMBER",
                        "description": "Percentage of Daily Value (DV)."
                    }
                },
                "required": [
                    "nutrient",
                    "amount"
                ]
            }
        },
        "health_benefits": {
            "type": "ARRAY",
            "items": {
                "type": "STRING"
            },
            "description": "A list of associated health benefits."
        }
    },
    "required": [
        "item_name",
        "category",
        "description",
        "key_nutrients"
    ]
}