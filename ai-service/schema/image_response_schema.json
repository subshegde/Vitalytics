{
    "type": "json_schema",
    "json_schema": {
        "name": "DetectionResult",
        "strict": true,
        "schema": {
            "type": "object",
            "properties": {
                "detected_disease": {
                    "type": "string",
                    "description": "The most likely skin disease (e.g., 'Atopic Dermatitis (Eczema)')."
                },
                "confidence_score": {
                    "type": "number",
                    "description": "A score from 0.0 to 1.0 indicating diagnosis confidence."
                },
                "description": {
                    "type": "string",
                    "description": "A brief explanation of the visual findings."
                },
                "precautionary_steps": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "3-5 immediate non-medical steps the user should take."
                }
            },
            "required": [
                "detected_disease",
                "confidence_score",
                "description",
                "precautionary_steps"
            ]
        }
    }
}