{
    "type": "json_schema",
    "json_schema": {
        "name": "DietSummary",
        "strict": true,
        "schema": {
            "type": "object",
            "properties": {
                "summary_text": {
                    "type": "string",
                    "description": "A brief, actionable summary of the diet quality."
                },
                "macro_breakdown": {
                    "type": "object",
                    "properties": {
                        "carbs": {
                            "type": "number",
                            "description": "Carbohydrate percentage of total calories.",
                            "minimum": 0,
                            "maximum": 100
                        },
                        "protein": {
                            "type": "number",
                            "description": "Protein percentage of total calories.",
                            "minimum": 0,
                            "maximum": 100
                        },
                        "fats": {
                            "type": "number",
                            "description": "Fat percentage of total calories.",
                            "minimum": 0,
                            "maximum": 100
                        }
                    },
                    "required": [
                        "carbs",
                        "protein",
                        "fats"
                    ],
                "additionalProperties": false
                },
                "recommendations": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Specific, actionable dietary recommendations."
                }
            },
            "required": [
                "summary_text",
                "macro_breakdown",
                "recommendations"
            ],
            "additionalProperties": false
        }
    }
}